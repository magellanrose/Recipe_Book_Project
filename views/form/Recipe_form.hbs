<a class="text-center" href="/">Home</a>

<h1 class="text-center">Add a Dish</h1>
<section class="container">
    <div class="row justify-content-center text-center col-md-6 mx-auto">
        <form action="/create/recipe" method="POST">
            <input class="form-control form-control-lg" name="title" type="text"
                placeholder="Enter the name of the dish">
            <input class="form-control form-control-lg" name="ingredients" type="text"
                placeholder="Enter the ingredients">
            <input class="form-control form-control-lg" name="recipe" type="text" placeholder="Enter the recipe">

            <button class="btn btn-outline-dark mt-3">Submit</button>
        </form>
    </div>
</section>