<h1 class="text-center">Log In</h1>

{{#each errors}}
<p class="text-danger">{{this}}</p>
{{/each}}


<section class="container">
    <div class="row justify-content-center col-md-6 mx-auto">
        <form action="/login" method="POST">
            <input class="form-control form-control-lg" name="email" type="email" placeholder="Enter your email">
            <input class="form-control form-control-lg" name="password" type="password"
                placeholder="Enter your password">

            <div class="text-center">
                <button class="btn btn-outline-dark mt-3">Submit</button>

                <a class="nav-link" href="/register">
                    <button class="btn btn-outline-dark mt-3">Register</button>
                </a>
            </div>


        </form>
    </div>
</section>